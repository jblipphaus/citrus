<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase" xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">
    <testcase name="IterateTest">
		<meta-info>
			<author>Unknown</author>
			<creationdate>2008-04-25</creationdate>
			<status>FINAL</status>
			<last-updated-by>Unknown</last-updated-by>
			<last-updated-on>2008-04-25T00:00:00</last-updated-on>
		</meta-info>
		
        <description>
			Test of iterating loops
		</description>
		<variables>
			<variable name="max" value="3"/>
		</variables>
        <actions>
        	<iterate condition="i lt= citrus:randomNumber(1)" index="i">
				<echo>
					<message>index is: ${i}</message>
				</echo>
			</iterate>
			
			<iterate condition="i lt 20" index="i">
				<echo>
					<message>index is: ${i}</message>
				</echo>
			</iterate>
			
			<iterate condition="(i lt 5) or (i = 5)" index="i">
				<echo>
					<message>index is: ${i}</message>
				</echo>
			</iterate>
			
			<iterate condition="(i lt 5) and (i lt 3)" index="i">
				<echo>
					<message>index is: ${i}</message>
				</echo>
			</iterate>
			
			<iterate condition="i = 0" index="i">
				<echo>
					<message>index is: ${i}</message>
				</echo>
			</iterate>
			
			<iterate condition="${max} gt= i" index="i">
				<echo>
					<message>index is: ${i}</message>
				</echo>
			</iterate>
			
			<iterate condition="i lt= 50" index="i" start="0" step="5">
				<echo>
					<message>index is: ${i}</message>
				</echo>
			</iterate>
        </actions>
    </testcase>
</spring:beans>