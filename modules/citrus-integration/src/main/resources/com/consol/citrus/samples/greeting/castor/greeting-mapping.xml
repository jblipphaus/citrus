<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" 
                         "http://castor.org/mapping.dtd">
                         
<mapping>
    <description>Greeting request/response mapping</description>
    
    <class name="com.consol.citrus.samples.greeting.model.GreetingRequestMessage">
        <map-to xml="GreetingRequestMessage" ns-prefix="greet" ns-uri="http://www.citrusframework.org/samples/greeting"/>
        
        <field name="correlationId">
            <bind-xml name="CorrelationId" node="element"/>
        </field>
        
        <field name="operation">
            <bind-xml name="Operation" node="element"/>
        </field>
        
        <field name="user">
            <bind-xml name="User" node="element"/>
        </field>
        
        <field name="text">
            <bind-xml name="Text" node="element"/>
        </field>
    </class>
    
    <class name="com.consol.citrus.samples.greeting.model.GreetingResponseMessage">
        <map-to xml="GreetingResponseMessage" ns-prefix="greet" ns-uri="http://www.citrusframework.org/samples/greeting"/>
        
        <field name="correlationId">
            <bind-xml name="CorrelationId" node="element"/>
        </field>
        
        <field name="operation">
            <bind-xml name="Operation" node="element"/>
        </field>
        
        <field name="user">
            <bind-xml name="User" node="element"/>
        </field>
        
        <field name="text">
            <bind-xml name="Text" node="element"/>
        </field>
        
        <field name="exception">
            <bind-xml name="Exception" node="element"/>
        </field>
    </class>
</mapping>